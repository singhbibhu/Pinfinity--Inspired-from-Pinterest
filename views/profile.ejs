<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1 ">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image" >
    </form>
    <div class="profdets flex flex-col items-center justify-center mt-15">
        <div class="relative">
            <span id="uplodicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class=" text-zinc-800 ri-pencil-line"></i>
            </span>
            <div class=" w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-3xl font-medium mt-5"><%= user.name %></h1>
        <h3 class="text-md ">@<%= user.username %> </h3>
        <a href="/edit" class="px-7 mt-5 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
        <a href="/add" class="px-10 py-2 rounded-lg bg-purple-500 text-xs font-medium mt-5">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">

            <div class="w-[400px] h-[274px] bg-zinc-200 rounded-lg  overflow-hidden ">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
            </div>
            <a href="/show/posts" class=" inline-block text-l font-medium mt-3">Your Uploaded Pins</a>
            <h5 class="text-sm opacity-60"><%= user.posts.length %></h5>
        </div>
        <!-- <div card>
            <div class="w-44 h-32 bg-zinc-200 rounded-lg "></div>
            <h3 class="text-l font-medium mt-3">all pins</h3>
            <h5 class="text-sm opacity-60 ">20 pins</h5>
        </div> -->
       
    </div>
</div>
<script>
    document.querySelector("#uplodicon").addEventListener("click", function(){
        document.querySelector("#uploadform input").click();
    })
    document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })
</script>
