<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create a New Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="text-white block w-1/3 px-3 py-2 " type="file" name="postimage" >
            <input class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
            <textarea class="text-black block w-1/3 px-3 py-2 h-60 border-2 mt-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
            <input class="text-black block w-1/3 px-3 py-2 bg-purple-500 mt-2 rounded-md" type="submit" value="Create Post">
        </form>
</div>
